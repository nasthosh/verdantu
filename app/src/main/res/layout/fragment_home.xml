<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:fab="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".ui.home.HomeFragment">


    <TextView
        android:id="@+id/textView1"
        android:layout_width="402dp"
        android:layout_height="2dp"
        android:text=""
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/profileImageButton"
        android:layout_width="36dp"
        android:layout_height="38dp"
        android:layout_marginStart="20dp"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="30dp"
        android:background="#FFFFFF"
        android:clickable="true"
        android:scaleType="fitXY"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView1"
        app:srcCompat="@drawable/ic_person_outline_black_24dp"
        tools:ignore="VectorDrawableCompat" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="258dp"
        android:layout_height="53dp"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="30dp"
        android:text="  Hello, User!!"
        android:fontFamily="cursive"
        android:textSize="30dp"
        app:layout_constraintLeft_toLeftOf="@+id/profileImageButton"
        app:layout_constraintTop_toBottomOf="@+id/textView1"
        app:layout_editor_absoluteX="112dp"
        app:layout_editor_absoluteY="72dp"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="322dp"
        android:layout_height="45dp"
        android:layout_marginStart="40dp"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="60dp"
        android:fontFamily="cursive"
        android:text=""
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2"
        app:layout_editor_absoluteX="27dp"
        app:layout_editor_absoluteY="172dp"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="319dp"
        android:layout_height="60dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="40dp"
        android:layout_marginStart="40dp"
        android:text=""
        android:textColor="@color/colorPrimary"
        android:fontFamily="cursive"
        android:textSize="30dp"
        app:layout_constraintTop_toBottomOf="@+id/textView3"
        app:layout_editor_absoluteX="31dp"
        app:layout_editor_absoluteY="350dp"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="31dp" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="333dp"
        android:layout_height="67dp"
        android:layout_marginStart="40dp"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="60dp"
        android:fontFamily="cursive"
        android:text="     Lets Stay Green Together"
        android:textSize="30dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView4"
        app:layout_editor_absoluteX="31dp"
        app:layout_editor_absoluteY="350dp"
        tools:ignore="MissingConstraints" />

    <com.github.clans.fab.FloatingActionMenu
        android:id="@+id/floatingMenu"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        fab:menu_labels_ellipsize="end"
        fab:menu_labels_singleLine="true"
        fab:menu_fab_label="Cancel"
        android:layout_marginTop="20dp"
        app:layout_constraintBottom_toBottomOf="@+id/textView5"
        fab:menu_backgroundColor="#ccffffff"
        fab:menu_animationDelayPerItem="0"
        fab:menu_colorNormal="#32CD32"
        fab:menu_colorPressed="#32CD32"
        fab:menu_colorRipple="#32CD32"
        android:padding="80dp"
        android:paddingEnd="20dp"
        android:layout_marginEnd="1dp"
        android:layout_marginRight="1dp"
        android:paddingRight="20dp">

        <com.github.clans.fab.FloatingActionButton
            android:id="@+id/fabAddByCategory"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_playlist_add_black_24dp"
            fab:fab_size="mini"
            fab:fab_label="Add Food"/>

        <com.github.clans.fab.FloatingActionButton
            android:id="@+id/fabAddProduct"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/fab_add"
            fab:fab_size="mini"
            fab:fab_label="Add Recipe"/>

        <com.github.clans.fab.FloatingActionButton
            android:id="@+id/fabAddSubcategory"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/fab_add"
            fab:fab_size="mini"
            fab:fab_label="Subcategory"/>

    </com.github.clans.fab.FloatingActionMenu>
</androidx.constraintlayout.widget.ConstraintLayout>
